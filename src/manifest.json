{
  "manifest_version": 3,
  "name": "Grab OTP",
  "version": "1.0.0",
  "description": "Automatically retrieve OTP codes from Gmail based on the active website's domain",
  
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },

  
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Grab OTP from Gmail",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "oauth2": {
    "client_id": "__CHROME_CLIENT_ID__",
    "scopes": ["https://www.googleapis.com/auth/gmail.readonly"]
  }
}